@model WebApplication3105.Models.UpdateCategoryModel


<h1 class="mt-3">Edit Category</h1>

<form class="mt-5" method="post" action="Show">
    <div class="mb-3">
        <label for="categoryId" class="form-label"> Category Id</label>
        <input type="text" class="form-control" asp-for="CategoryId" readonly>
    </div>
    <div class="mb-3">
        <label for="categoryname" class="form-label"> Category Name</label>
        <input type="text" class="form-control" asp-for="CategoryName">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

    <button type="submit" class="btn btn-outline-danger"
                asp-action="Delete"
                asp-controller="Category">Delete</button>
</form>
