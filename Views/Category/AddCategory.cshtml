@model WebApplication3105.Models.Category


<h1 class="mt-3">Add Category</h1>

<form class="mt-5" method="post" action="AddCategory">
  <div class="mb-3">
    <label for="categoryname" class="form-label"> Category Name</label>
    <input type="text" class="form-control" asp-for="CategoryName" >
    </div>
  <div>
    @if (ViewBag.Message != null && ViewBag.Message == "Exist")
    {
        <br />

        <span style="color:red;">Category already exist.</span>
    }
    </div>
 
  <button type="submit" class="btn btn-primary">Submit</button>
  </form>
